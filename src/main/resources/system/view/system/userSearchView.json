{
  "name": "userSearchView",
  "result": [
    {
      "name": "id",
      "label": "",
      "attributes": {
        "data-radio": true
      }
    },
    {
      "name": "name",
      "label": "姓名",
      "attributes": {
        "data-sortable": true
      }
    },
    {
      "name": "mail",
      "label": "邮箱"
    },
    {
      "name": "sex",
      "label": "性别",
      "converter": {
        "provider": "valuesConvertProvider",
        "parameter": {
          "values": {
            "M": "男",
            "F": "女"
          }
        }
      }
    },
    {
      "name": "phone",
      "label": "电话"
    }
  ],
  "title": "用户管理",
  "operate": [
    {
      "view": "userCreateView",
      "icon": "glyphicon glyphicon-edit",
      "type": "create"
    }
  ],
  "data": "tbl_user",
  "type": "search",
  "actions": [
    {
      "search": true,
      "style": "btn-primary"
    },
    {
      "type": "create",
      "label": "新建用户",
      "view": "userCreateView"
    },
    {
      "label": "导出",
      "export": true,
      "view": "userSearchView"
    },
    {
      "label": "修改用户资料",
      "url": "redirect?view=userCreateView",
      "checked": true
    }
  ],
  "fields": [
    {
      "name": "name",
      "type": "text",
      "label": "用户名",
      "attributes": {
        "class": "form-control"
      },
      "operator": "$like"
    },
    {
      "name": "realName",
      "label": "姓名",
      "type": "text",
      "attributes": {
        "class": "form-control"
      },
      "operator": "$like"
    },
    {
      "name": "sex",
      "type": "radio",
      "label": "性别",
      "attributes": {
        "class": "radio",
        "value": "F"
      },
      "option": {
        "values": {
          "M": "男",
          "F": "女"
        }
      }
    }
  ],
  "defaultValue": {
    "name": {
      "$null": ""
    }
  },
  "export": {
    "template": "export/default.xlsx"
  },
  "permission":["系统配置"]
}